{
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": [
    "^(react/(.)$)|^(react$)|^(react-(.)$)",
    "^(next/(.)$)|^(next$)|^(next-(.)$)",
    "",
    "<THIRD_PARTY_MODULES>",
    "",
    "^[@/]",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2
}
